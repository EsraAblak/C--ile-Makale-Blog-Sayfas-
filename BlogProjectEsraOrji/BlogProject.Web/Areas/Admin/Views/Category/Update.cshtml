@model UpdateCategoryDTO


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> Kategori Güncelleme Paneli</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-for="Create" method="post">
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name">Kategori Adı</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Kategori Açıklaması</label>
                <input asp-for="Description" type="text" class="form-control">
                <span asp-validation-for="Description"></span>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer float-left">
            <button type="submit" class="btn btn-primary"> Güncelle</button>
        </div>
        <div class="card-footer float-right">
            <button asp-action="List" class="btn btn-primary"> Listeye Dön </button>
        </div>
    </form>
</div>