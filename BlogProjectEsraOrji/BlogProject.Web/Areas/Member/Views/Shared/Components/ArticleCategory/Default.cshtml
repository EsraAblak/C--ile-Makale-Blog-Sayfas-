@model List<ArticleCategoryVM>


<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-4" style="margin:20px">
            <div class="card" style="width:150px;">
                <div class="card-body">
                    @Html.CheckBoxFor(model=>model[i].IsSelected)
                    <label>@Model[i].CategoryName</label>
                    @Html.HiddenFor(model=>model[i].CategoryId)
                    @Html.HiddenFor(model=>model[i].CategoryName)
                </div>

            </div>
        </div>
    }
</div>