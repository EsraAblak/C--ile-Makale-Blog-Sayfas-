@model UpdateArticleDTO

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> Makale Güncelleme Paneli</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Title">Başlık</label>
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content">İçerik</label>
                <input asp-for="Content" type="text" class="form-control">
                <span asp-validation-for="Content"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath">Image</label>
                <input asp-for="ImagePath" type="file" class="form-control">
                <span asp-validation-for="Image"></span>
                <img src="@Model.Image" />  @*eski fotografı*@

            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Kategorisi</label>
                <select asp-for="CategoryId">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId"></span>
            </div>
            <input type="hidden" asp-for="AppUserId" />
            <input type="hidden" asp-for="Id" />
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Makale Güncelle</button>
        </div>
    </form>
</div>