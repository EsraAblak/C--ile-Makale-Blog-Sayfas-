@model List<ArticleDetailWithUser>

@foreach (var item in Model)
{
    <div class="col-12  d-flex align-items-stretch flex-column">
        <div class="card bg-light d-flex flex-fill">
            <div class="card-header text-muted border-bottom-0">

            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col-7">
                        <h2 class="lead"><strong><i>@item.Title</i></strong></h2>
                        <p class="text-muted text-sm"> @item.Content</p>
                        <ul class="ml-4 mb-0 fa-ul text-muted">

                        </ul>
                    </div>
                    <div class="col-5 text-center">
                        <img src="@item.Image" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="text-right">

                    <div class="btn btn-sm btn-primary" style="background-color: lightsalmon">
                        <h5>Oluşturulma Tarihi: @item.CreateDate.ToLongDateString()</h5>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <br />
}


